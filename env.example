# Copy this file to `env` and fill in real credentials for local development.
SMTP_SERVER=smtp.163.com
SMTP_PORT=465
SMTP_USER=your_smtp_username@example.com
SMTP_PASSWORD=your_smtp_password
API_KEY=your_glm_api_key
AI_BASE_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions
AI_MODEL=glm-4.5-flash
# Optional overrides
# EVENTS_DIR=./events
# RECIPIENT_LIST=./List.txt
# DATABASE_URL=postgresql://user:pass@localhost:5432/oap
EMBED_BASE_URL=https://api.openai.com/v1/embeddings
EMBED_MODEL=text-embedding-model
EMBED_API_KEY=your_embed_key
EMBED_DIM=1024
# Auth & Campus SSO
AUTH_JWT_SECRET=change-me
AUTH_REFRESH_HASH_KEY=change-me-too
# 秒，默认 3600/604800
# AUTH_ACCESS_TOKEN_TTL=3600
# AUTH_REFRESH_TOKEN_TTL=604800
# AUTH_PASSWORD_COST=12
# AUTH_ALLOW_AUTO_USER_CREATION=true
CAMPUS_AUTH_ENABLED=true
CAMPUS_AUTH_URL=http://a.stu.edu.cn/ac_portal/login.php
CAMPUS_AUTH_TIMEOUT=10
